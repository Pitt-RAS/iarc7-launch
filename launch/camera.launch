<launch>
    <arg name="device" />
    <arg name="camera_name" />
    <arg name="image_width" />
    <arg name="image_height" />

    <group ns="$(arg camera_name)">
        <node name="gscam_driver_v4l" pkg="gscam" type="gscam">
            <param name="camera_name" value="$(arg camera_name)"/>
            <param name="gscam_config" value="
                  v4l2src device=$(arg device) do-timestamp=false
                ! video/x-raw,format=YUYV, width=$(arg image_width), height=$(arg image_height), framerate=10/1
                ! nvvidconv
                ! video/x-raw,format=RGBA" />

            <param name="use_gst_timestamps" value="true"/>
            <param name="timestamp_offset" value="0.0"/>
            <param name="frame_id" value="$(arg camera_name)_optical"/>
            <param name="sync_sink" value="false"/>
        </node>
    </group>
</launch>
